\mode<presentation>

\useinnertheme[shadow=true]{rounded}

\pgfdeclarehorizontalshading{beamer@titleshade}{\paperheight}{%
  color(0pt)=(udeldarkblue);
  color(\paperwidth)=(udelblue)
}

\pgfdeclareimage[interpolate=true,height=2cm]{image1}{images/ncbilogo.png}

\setbeamertemplate{title page}{
  %\vspace{-10em}
  \nointerlineskip
  \hbox{%
    \leavevmode
    \beamer@tempdim=\textwidth%
    \hskip-\Gm@lmargin
    \begin{pgfpicture}{0pt}{0pt}{\paperwidth}{.5\paperheight}
      \usebeamercolor{frametitle right}
      \pgfpathrectangle{\pgfpointorigin}{\pgfpoint{\paperwidth}{\paperheight}}
      \pgfusepath{clip}
      \pgftext[left,base]{\pgfuseshading{beamer@titleshade}}
      \pgfputat{\pgfxy(8.5,5.3)}{\pgfbox[left,top]{\pgfuseimage{image1}}}
    \end{pgfpicture}
    \hspace{-\paperwidth}%
    \setbox\beamer@tempbox=\hbox{
      \begin{minipage}[b]{\paperwidth}%
        \vspace{2.5ex}
        % title
        \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle%
        %\nointerlineskip
        \vspace{.5ex}
      \end{minipage}
    }%
    \hspace{\Gm@lmargin}\box\beamer@tempbox%
  }
  \vspace{1ex}
  \hspace{1ex}\usebeamerfont{authorfont}\insertauthor\\[2ex]
  \hspace{1ex}\usebeamerfont{institutefont}\insertinstitute\\[1.5ex]
  \hspace{1ex}\usebeamerfont{datefont}\insertdate
}

\mode
<all>
